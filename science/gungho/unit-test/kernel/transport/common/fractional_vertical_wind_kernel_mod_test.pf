!> This code tests the fractional vertical wind kernel

module fractional_vertical_wind_kernel_mod_test

  use constants_mod, only : i_def, r_tran
  use funit

  implicit none

  private
  public :: test_all

  @TestCase
  type, public, extends(TestCase) :: fractional_vertical_wind_test_type
    private
  contains
    procedure test_all
  end type fractional_vertical_wind_test_type

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_all( this )

    use, intrinsic :: iso_fortran_env,       only : real64
    use fractional_vertical_wind_kernel_mod, only : fractional_vertical_wind_code

    implicit none

    class(fractional_vertical_wind_test_type), intent(inout) :: this

    real(r_tran),   parameter :: tol       = 1.0e-12_r_tran   ! r_tran 64bit
    integer(i_def), parameter :: nlayers   = 5
    integer(i_def), parameter :: ndf_w2v   = 2
    integer(i_def), parameter :: undf_w2v  = nlayers+1
    integer(i_def), parameter :: ndf_w3   = 1
    integer(i_def), parameter :: undf_w3  = nlayers
    integer(i_def), dimension(ndf_w2v) :: map_w2v
    integer(i_def), dimension(ndf_w3) :: map_w3

    real(r_tran), dimension(undf_w2v) :: frac_wind

    real(r_tran) :: dep_pts(undf_w2v)
    real(r_tran) :: detj(undf_w3)
    real(r_tran) :: dt
    real(r_tran) :: answer(undf_w2v)

    real(r_tran)   :: use_tol
    integer(i_def) :: k

    ! Set up maps
    map_w2v(:) = (/ 1, 2 /)
    map_w3 = 1

    ! Set Det(J) and time step
    detj = (/ 2.0_r_tran, 4.0_r_tran, 5.0_r_tran, 6.0_r_tran, 8.0_r_tran /)

    ! Set departure points
    dep_pts = (/ 0.0_r_tran, 0.5_r_tran, 1.2_r_tran, -1.3_r_tran, -0.8_r_tran, 0.0_r_tran /)

    ! Answer is fractional_departure_distance * upwind Det(j)
    answer = (/ 0.0_r_tran,  1.0_r_tran,  0.4_r_tran,  -2.4_r_tran,  -6.4_r_tran,  0.0_r_tran /)

    call fractional_vertical_wind_code( nlayers,   &
                                        frac_wind, &
                                        dep_pts,   &
                                        detj,      &
                                        ndf_w2v,   &
                                        undf_w2v,  &
                                        map_w2v,   &
                                        ndf_w3,    &
                                        undf_w3,   &
                                        map_w3  )

    if ( r_tran == real64 ) then
      use_tol = tol
    else
      ! Set tolerance based on precision of field
      use_tol = 10.0_r_tran*spacing( maxval(frac_wind(:)) )
    endif

    do k=1,nlayers+1
      @assertEqual( answer(k), frac_wind(k), use_tol)
    end do

  end subroutine test_all

end module fractional_vertical_wind_kernel_mod_test
